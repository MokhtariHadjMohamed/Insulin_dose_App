<!-- res/drawable/ver_item_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="52dp" android:height="100dp" />
            <solid android:color="#FFA500" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="52dp" android:height="72dp" />
            <solid android:color="#FFE0B2" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Space between items (white) -->
    <item android:left="1dp">
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="72dp" />
            <solid android:color="#FFFFFF" /> <!-- White color for the space -->
        </shape>
    </item>
</selector>
