<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewItemMedicines"
                android:layout_width="97dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edit_text_shap_rec"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/adwiya" />

            <TextView
                android:id="@+id/houersItemMedicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableEnd="@drawable/ellipse"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_regular"
                android:paddingRight="5dp"
                android:text="08:00 ليلا "
                android:textColor="@color/text02"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/imageViewItemMedicines"
                app:layout_constraintTop_toTopOf="@+id/imageViewItemMedicines" />

            <TextView
                android:id="@+id/dateItemMedicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableEnd="@drawable/ellipse"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_regular"
                android:paddingRight="5dp"
                android:text="الاحد 26 نوفمبر 2023"
                android:textColor="@color/text02"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/amountItemMedicines"
                app:layout_constraintEnd_toStartOf="@+id/imageViewItemMedicines"
                app:layout_constraintTop_toBottomOf="@+id/houersItemMedicines" />

            <TextView
                android:id="@+id/amountItemMedicines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableEnd="@drawable/ellipse"
                android:drawablePadding="10dp"
                android:fontFamily="@font/tajawal_regular"
                android:paddingRight="5dp"
                android:text="01 حبة دواء "
                android:textColor="@color/text02"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewItemMedicines"
                app:layout_constraintEnd_toStartOf="@+id/imageViewItemMedicines"
                app:layout_constraintTop_toBottomOf="@+id/dateItemMedicines" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewItemMedicines"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/baseline_delete_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>