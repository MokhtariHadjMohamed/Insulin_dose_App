    tools:context=".InfoActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info04"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewinfo04"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2info04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/info04" />

        <TextView
            android:id="@+id/textView2info04"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center|top"
            android:letterSpacing="0.02"
            android:text="تذكيرات وارشادات"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3info04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewinfo04" />

        <TextView
            android:id="@+id/textView3info04"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_arrow_left_24"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="التذكير بوقت قياس السكر."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4info04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2info04" />

        <TextView
            android:id="@+id/textView4info04"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_arrow_left_24"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="الاشعار وقت أخذ جرعات الانسولين وأدوية أخرى."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5info04"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3info04" />

        <TextView
            android:id="@+id/textView5info04"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_arrow_left_24"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="نصائح و تعليمات."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/startBtnInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
