            android:id="@+id/textView2info01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center|top"
            android:letterSpacing="0.02"
            android:text="مرحبا بك في جرعة انسولين"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3info01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewinfo01" />

        <TextView
            android:id="@+id/textView3info01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center_horizontal|top"
            android:letterSpacing="0.02"
            android:text="يسعدنا أن نرحب بك في تجربة فريدة وفعالة لتتبع مستوى السكر في الدم. يهدف تطبيقنا إلى جعل عملية رعايتك الصحية أسهل وأكثر فعالية من خلال ميزاته المتقدمة والمستخدمة بسهولة."
            android:textAlignment="center"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2info01" />


