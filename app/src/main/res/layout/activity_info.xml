            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:drawableEnd="@drawable/baseline_arrow_left_24"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="مراقبة تغير مستوى السكر مع مرور الوقت."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5info03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3info03" />

