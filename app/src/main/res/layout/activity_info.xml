            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="تحليل شامل للبيانات."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4info03" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewinfo02"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2info02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/info2" />

        <TextView
            android:id="@+id/textView2info02"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_bold"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="كيف يمكن أن يساعدك تطبيقنا؟"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3info02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewinfo02" />

        <TextView
            android:id="@+id/textView3info02"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center_horizontal|top"
            android:letterSpacing="0.02"
            android:text="تطبيق جرعة هو الحل نحو جعل تسجيل قراراتك حول مستوى السكر خطوة سهلة و بذلك قد خطوت الخطوة الأولى نحو السيطرة على السكر"
            android:textAlignment="center"
            android:textColor="@color/text02"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2info02" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info01"
