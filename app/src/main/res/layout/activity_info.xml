            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3info03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewinfo03" />

        <TextView
            android:id="@+id/textView3info03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:drawableEnd="@drawable/baseline_arrow_left_24"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="right|top"
            android:letterSpacing="0.02"
            android:text="تسجيل تفاصيل يومية، الاكل، الرياضة... الخ."
            android:textAlignment="textStart"
            android:textColor="@color/text02"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4info03"
            app:layout_constraintEnd_toEndOf="parent"
