<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"    android:layout_height="match_parent"
    android:orientation="vertical"    android:padding="16dp">
    <!-- Vertical RecyclerView -->
    <!-- Horizontal RecyclerView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView39"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            android:layout_marginTop="32dp"
            android:fontFamily="@font/almarai_extra_bold"            android:text="الخميس, 26 ماي 2023"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.743"
            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/textView15" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/verticalRecyclerView"            android:layout_width="0dp"
            android:layout_height="120dp"            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"            android:background="@drawable/vertical_item_default_background"
            android:orientation="horizontal"            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/horizontalRecyclerView"
            android:layout_width="344dp"            android:layout_height="288dp"
            android:layout_marginLeft="15dp"            android:background="@drawable/horizontal_item_layout"
            android:orientation="vertical"            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/verticalRecyclerView"
            app:layout_constraintVertical_bias="0.24">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView            android:id="@+id/textView15"
            android:layout_width="wrap_content"            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"            android:fontFamily="@font/almarai_bold"
            android:text="اليوم"            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintStart_toEndOf="@+id/imageView1"            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView1"            android:layout_width="wrap_content"
            android:layout_height="70dp"            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"            app:srcCompat="@drawable/logo_home"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>