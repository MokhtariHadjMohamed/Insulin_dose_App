<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color3"
    android:scrollbarSize="18sp"
    tools:context=".SportActivity">

    <TextView
        android:id="@+id/add"
        android:layout_width="149dp"
        android:layout_height="54dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle_7"
        android:drawableEnd="@drawable/add"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/tajawal_medium"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:text="إضافة"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/cnnl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cnnl2" />

    <TextView
        android:id="@+id/cnnl2"
        android:layout_width="149dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rectangle_7"
        android:drawableEnd="@drawable/cancel"
        android:drawablePadding="15dp"
        android:elevation="10dp"
        android:fontFamily="@font/tajawal_medium"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:text="إلغاء"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtime" />

    <EditText
        android:id="@+id/tvtime"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_shap_rec"
        android:drawableEnd="@drawable/clock"
        android:drawablePadding="15dp"
        android:drawableTint="@color/color6"
        android:elevation="10dp"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="datetime"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdate" />

    <EditText
        android:id="@+id/tvdate"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_shap_rec"
        android:drawableEnd="@drawable/canedrier"
        android:drawablePadding="15dp"
        android:drawableTint="@color/color6"
        android:elevation="10dp"
        android:ems="10"
        android:gravity="center|right"
        android:inputType="date"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/tajawal_bold"
        android:shadowColor="@color/colorshadow"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="الرياضة"
        android:textColor="@color/text02"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="152dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/sport" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/color3"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_shape">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/tajawal_bold"
                android:shadowColor="@color/colorshadow"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="مدة ممارسة الرياضة"
                android:textColor="@color/text02"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/sport"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edit_text_shap"
                android:drawableEnd="@drawable/baseline_sports_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/color5"
                android:elevation="10dp"
                android:ems="10"
                android:gravity="center|right"
                android:hint="القيمة"
                android:inputType="time"
                android:paddingRight="20dp"
                android:shadowDx="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:elevation="11dp"
                android:fontFamily="@font/almarai_bold"
                android:hint="دقيقة"
                android:textColor="@color/text02"
                app:layout_constraintBottom_toBottomOf="@+id/sport"
                app:layout_constraintStart_toStartOf="@+id/sport"
                app:layout_constraintTop_toTopOf="@+id/sport" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/tajawal_bold"
        android:text="متى قمت بالنشاط ؟ "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

</androidx.constraintlayout.widget.ConstraintLayout>